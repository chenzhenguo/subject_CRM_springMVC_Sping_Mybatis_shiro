<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="cn.czg.mapper.RoleMapper">
	<select id="findRoleByUserId" resultType="Role">
		select * from t_role where id  in(
			select roleId from t_user where id = #{id}
		)
	</select>
	
	<select id="list" resultType="Role">
		select * from t_role 
	</select>
	
	
</mapper>